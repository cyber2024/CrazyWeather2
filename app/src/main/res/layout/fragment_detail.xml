<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ggg.crazyweather.fragments.FragmentDayDetail"
    android:paddingLeft="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvListItemDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today"
            android:fontFamily="sans-serif-condensed"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tvListItemDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="June 24"
            android:fontFamily="sans-serif-condensed"
            android:textSize="16sp"
            android:textColor="#646464"/>

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:minHeight="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvListItemMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21°C"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="86sp"/>

                <TextView
                    android:id="@+id/tvListItemMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8°C"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="48sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/list_item_icon"
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:src="@drawable/art_clear"/>

                <TextView
                    android:id="@+id/tvListItemWeatherDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloudy"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="22sp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvListItemHumidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100%"
            android:fontFamily="sans-serif-condensed"
            android:textSize="22sp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvListItemWind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6 km/hr"
            android:fontFamily="sans-serif-condensed"
            android:textSize="22sp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvListItemPressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1014"
            android:fontFamily="sans-serif-condensed"
            android:textSize="22sp"
            android:paddingBottom="4dp"/>

    </LinearLayout>

</ScrollView>